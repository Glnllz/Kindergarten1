<Window x:Class="KindergartenWPF.EditKrygokWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование кружка" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Название"/>
            <TextBox x:Name="txtNazvanie" Text="{Binding Nazvanie}" Margin="0,0,0,10"/>

            <Label Content="Количество мест"/>
            <TextBox x:Name="txtKolvoMest" Text="{Binding kolvo_mest}" Margin="0,0,0,10"/>

            <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" Width="100" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>