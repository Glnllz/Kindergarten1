<Window x:Class="KindergartenWPF.AddGruppaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление группы" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Название группы"/>
            <TextBox x:Name="txtName" Margin="0,0,0,10"/>


            <Label Content="Количество детей"/>
            <TextBox x:Name="txtCount" Margin="0,0,0,10"/>

            <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" Width="100" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>