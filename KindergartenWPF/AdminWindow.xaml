<Window x:Class="KindergartenWPF.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <Button Content="Дети" Click="btnDeti_Click" Margin="5"/>
            <Button Content="Занятия" Click="btnZanyatiya_Click" Margin="5"/>
            <Button Content="Группа" Click="btnGruppa_Click" Margin="5"/>
            <Button Content="Кружок" Click="btnKruzhok_Click" Margin="5"/>
            <Button Content="Мероприятия" Click="btnMeropriyatie_Click" Margin="5"/>
            <Button Content="Расписание" Click="btnRaspisanie_Click" Margin="5"/>
            <Button Content="Назад" Click="btnBack_Click" Margin="5"/>
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>